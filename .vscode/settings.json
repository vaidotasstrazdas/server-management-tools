{
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["tests"],
  "python.envFile": "${workspaceFolder}/.env",

  // Use Black for formatting, run on save
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },

  // Run isort (organize imports) on save
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },

  // Point VS Code isort extension to the venv + pass args consistent with pyproject
  "isort.path": ["${workspaceFolder}/.venv/bin/isort"],
  "isort.args": ["--profile", "black", "--line-length", "100"],

  // Linting
  "pylint.path": ["${workspaceFolder}/.venv/bin/pylint"],
  "pylint.args": ["--disable=too-few-public-methods,line-too-long"]
}
